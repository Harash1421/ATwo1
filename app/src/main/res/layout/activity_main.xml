<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMyLocation"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/location_name"
        android:gravity="center"
        android:text="@string/My_Location"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buFindLocation"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#000000"
        android:text="@string/Find_My_Location"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMyLocation" />

    <Button
        android:id="@+id/buOpenMaps"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#000000"
        android:text="@string/Open_Map"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buFindLocation" />
</androidx.constraintlayout.widget.ConstraintLayout>